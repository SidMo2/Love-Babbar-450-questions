class Solution{
public:
    int minTime(int S1, int S2, int N){
        // code here
        vector<int> time_taken;
        int n=N;
        while(n>=0){
            int x=max(S1*n, S2*(N-n));
            time_taken.push_back(x);
            n--;
        }
        sort(time_taken.begin(),time_taken.end());
        return time_taken[0];
    }
};
